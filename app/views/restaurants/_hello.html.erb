<%= form_for(@restaurant) do |f| %>

  <% if @restaurant.errors.any? %>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: '請輸入名稱' %>
  </div>

  <div class="field">
    <%= f.label :tel %>
    <%= f.text_field :tel, placeholder: '請輸入你的電話' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: '請輸入電子郵箱' %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, placeholder: '請輸入地址' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit %>
<% end %>
